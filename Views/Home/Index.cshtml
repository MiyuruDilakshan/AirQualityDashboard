@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout"; // Ensure the shared layout is applied
}

<!-- Add Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Custom Styles -->
<style>
    .home-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
        background-color: #f9f9f9;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1.display-4 {
        color: #007bff;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    p {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #333;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 10px;
        padding: 12px 24px;
        font-size: 1.1rem;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

        .btn-primary:active {
            transform: translateY(0);
        }
</style>

<div class="container mt-5">
    <div class="home-container text-center">
        <h1 class="display-4">Welcome to the Real-time Air Quality Monitoring Dashboard for Colombo</h1>
        <p>
            This website provides accurate and real-time air quality insights for Colombo using simulated sensor data. This project aims to help environmental agencies, researchers, and the public make informed decisions about air pollution.
        </p>

        <!-- Button to Public Home -->
        <a href="/Public/Index" class="btn btn-primary mt-3">Go to Dashboard</a>
    </div>
</div>