@{
    ViewData["Title"] = "Logout";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-body text-center">
            <h2 class="card-title mb-4">Logout Confirmation</h2>
            <p>Are you sure you want to logout?</p>
            <form asp-controller="Account" asp-action="LogoutConfirmed" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger btn-lg">Yes, Logout</button>
                <a href="@Url.Action("Index", "AdminDashboard")" class="btn btn-secondary btn-lg">Cancel</a>
            </form>
        </div>
    </div>
</div>