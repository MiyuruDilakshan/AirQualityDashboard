@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            animation: fadeIn 1s ease-in-out;
        }

        .card-header {
            background: #667eea;
            color: white;
            border-radius: 15px 15px 0 0;
        }

        .list-group-item {
            border: none;
            padding: 15px;
            transition: background 0.3s ease;
        }

            .list-group-item:hover {
                background: #f1f1f1;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Admin Dashboard</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">System Overview</h5>
                        <p class="card-text">Active Sensors: @ViewBag.ActiveSensors</p>
                        <p class="card-text">Simulation Running: @(ViewBag.SimulationStatus ? "Yes" : "No")</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Quick Links</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><a asp-controller="AdminDashboard" asp-action="Sensors">Sensor Management</a></li>
                            <li class="list-group-item"><a asp-controller="AdminDashboard" asp-action="SimulationSettings">Simulation Settings</a></li>
                            <li class="list-group-item"><a asp-controller="AdminDashboard" asp-action="Alerts">Alerts Configuration</a></li>
                            <li class="list-group-item"><a asp-controller="AdminDashboard" asp-action="Users">User Management</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>